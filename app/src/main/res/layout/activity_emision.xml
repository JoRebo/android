<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9D1DB"
    tools:context=".Emision">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta venta"
                android:textAllCaps="true"
                android:textColor="#5B79E7" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:text="TOTAL"
                    android:textColor="#5B79E7"
                    android:textSize="19dp" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="#fff" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:layout_weight="5">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="top"
                android:columnCount="4"
                android:orientation="horizontal"
                android:padding="0dp"
                android:rowCount="6">

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="C"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:textColor="#FFFF"
                    android:text="(" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:textColor="#FFFF"
                    android:text=")" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="50dp"
                    android:drawableLeft="@drawable/icono_borrar"
                    android:paddingLeft="25dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="7"
                    android:textColor="#FFFF"
                    android:textSize="50dp"
                    />


                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="8"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="9"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:text="+"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="4"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:text="5"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="6"
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="50dp"
                    android:drawableLeft="@drawable/icono_multiplicar"
                    android:paddingLeft="25dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="1"
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="2"
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="3"
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill"
                    android:layout_margin="2dp"
                    android:backgroundTint="#449C49"
                    android:text="Generar Boleta Electronica"
                    android:drawableBottom="@drawable/icono_emitir"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text=","
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="#FFFF"
                    android:textSize="50dp"/>

                <Button
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:backgroundTint="#F7639DCF"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:text="-"
                    android:textColor="#FFFF"
                    android:textSize="50dp" />


            </GridLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>