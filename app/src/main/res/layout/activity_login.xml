<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background_login"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_facele"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/texto_usuario"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:textAlignment="center"
            android:textColor="#0859E6"
            android:textColorHint="#0859E6"
            android:hint="USUARIO"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/texto_contraseña"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:textAlignment="center"
            android:textColor="#0859E6"
            android:textColorHint="#0859E6"
            android:hint="CONTRASEÑA"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/boton_ingresar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#369723"
            android:textColor="#fff"
            android:text="INGRESAR"/>

        <Button
            android:id="@+id/boton_recuperarContraseña"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3FA6D5"
            android:textColor="#fff"
            android:text="OLVIDE MI CONTRASEÑA"/>

    </LinearLayout>


</LinearLayout>